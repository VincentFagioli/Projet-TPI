{
     //Définition des informations de base du plugin qui seront vue une fois le plugin ajouté à Google Chrome
    "author": "Vincent Fagioli",
    "name": "Lecture contextualisée",
    "version": "1.0",
    "description": "Plugin permettant de changer le genre grammatical de la lecture ainsi que la police",
     //activeTab permet d'intéragir avec la page active pour insérer du css par exemple
     // declarativeContent...
    "permissions": [ "activeTab","declarativeContent"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/cpnv_16x16.png",
        "32": "images/cpnv_32x32.png",
        "48": "images/cpnv_48x48.png",
        "128": "images/cpnv_128x128.png"
      }
    },
    
    "icons": {
      "16": "images/cpnv_16x16.png",
      "32": "images/cpnv_32x32.png",
      "48": "images/cpnv_48x48.png",
      "128": "images/cpnv_128x128.png"
    },
    "manifest_version": 2
  }